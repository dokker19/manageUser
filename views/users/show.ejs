<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container user user-show">
      <h2>Show</h2>
      <div class="card">
        <div class="card-body">
          <h3 class="card-title"><%= user.username%></h3>
          <label>PW: </label><span><%= user.password %></span>
          <br>
          <label>ID: </label><span><%= user.id %></span>
        </div>
      </div>
      <div class="user-menu mt-2">
        <a href="/users/<%= user._id %>/edit" class="btn btn-light mr-2">Edit</a>
        <form action="/users/<%= user._id %>?_method=delete" method="post">
          <a href="#" class="btn btn-light" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
        </form>
      </div>
    </div>
  </body>
</html>
